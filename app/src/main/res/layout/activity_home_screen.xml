<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1B1F23"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Welcome Text -->
        <TextView
            android:id="@+id/tvWelcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_marginBottom="16dp" />

        <!-- User Name -->
        <TextView
            android:id="@+id/etName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:layout_marginBottom="24dp" />

        <!-- Buttons -->
        <Button
            android:id="@+id/btnAddExpense"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Add Expense"
            android:textColor="@android:color/white"
            android:backgroundTint="#4CAF50"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/btnViewExpenses"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="View Expenses"
            android:textColor="@android:color/white"
            android:backgroundTint="#FF5722"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/btnBudgetGoals"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Set Budget Goals"
            android:textColor="@android:color/white"
            android:backgroundTint="#9C27B0"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/btnViewBudget"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="View Budget Goals"
            android:textColor="@android:color/white"
            android:backgroundTint="#673AB7"
            android:layout_marginBottom="16dp" />

        <!-- New Account Settings Button -->
        <Button
            android:id="@+id/btnAccountSettings"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Account Settings"
            android:textColor="@android:color/white"
            android:backgroundTint="#03A9F4"
            android:layout_marginBottom="24dp" />

    </LinearLayout>
</ScrollView>

