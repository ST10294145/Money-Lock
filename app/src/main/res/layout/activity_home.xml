<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1B1F23"
    android:padding="24dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Profile Picture and Username Row -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="24dp">

            <!-- Profile Picture -->
            <ImageView
                android:id="@+id/imgProfile"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_profile_placeholder"
                android:background="@drawable/circle_background"
                android:scaleType="centerCrop"
                android:clickable="true"
                android:focusable="true"
                android:contentDescription="Profile Picture" />

            <!-- Username -->
            <TextView
                android:id="@+id/tvUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Username"
                android:textSize="20sp"
                android:textColor="@android:color/white"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="12dp" />
        </LinearLayout>

        <!-- Balance Label -->
        <TextView
            android:id="@+id/tvBalance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Balance:"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp" />

        <!-- Total Expenses -->
        <Button
            android:id="@+id/btnTotalExpenses"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Total Amount(Expenses): R00.00"
            android:textColor="@android:color/white"
            android:backgroundTint="#3E5463"
            android:textAllCaps="false"
            android:layout_marginBottom="16dp" />

        <!-- Bills Total -->
        <Button
            android:id="@+id/btnBillsTotal"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Bills Total:"
            android:textColor="@android:color/white"
            android:backgroundTint="#3E5463"
            android:textAllCaps="false"
            android:layout_marginBottom="16dp" />

        <!-- View All Expenses Button -->
        <Button
            android:id="@+id/btnViewExpenses"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="View All Expenses"
            android:textColor="@android:color/white"
            android:backgroundTint="#FF0000"
            android:textAllCaps="true"
            android:layout_marginBottom="40dp" />

    </LinearLayout>
</ScrollView>
